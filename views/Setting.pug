doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src='https://cdn.socket.io/4.7.4/socket.io.min.js')
    title Preference Settings
  body
    .links
      a.btn.btn-primary(onclick='routeToDirectory()') Back
    .container.standard-wrapper
      h1(style="margin-bottom: 10px; display: flex; justify-content: center; ") Preferences
      form#preference-form
        .mb-3
          label(for="email") Email Address
          input#email.form-control(type="email", name="email", placeholder="Enter your email")
        .mb-3
          h6 Under which status would you like to recieve email notification? 
          label(for="email-preference") Email Notification Status Threshold
          select#email-preference.form-select(name="email_preference")
            option(value="off") Off
            option(value="Ok") Ok
            option(value="Help") Help
            option(value="Emergency") Emergency
        .mb-3
          label Notification Types
          .form-check
            input.form-check-input(type="checkbox", name="announcement_updates", id="announcement-updates")
            label.form-check-label(for="announcement-updates") Announcement Updates
          .form-check
            input.form-check-input(type="checkbox", name="private_post_updates", id="private-post-updates")
            label.form-check-label(for="private-post-updates") Private Post Updates
          .form-check
            input.form-check-input(type="checkbox", name="public_post_updates", id="public-post-updates")
            label.form-check-label(for="public-post-updates") Public Post Updates
          .form-check
            input.form-check-input(type="checkbox", name="status_changes", id="status-changes")
            label.form-check-label(for="status-changes") Status Changes
        .buttonWrapper
          button.btn.btn-primary(type="button" onclick="routeToSubscriber()") Manage Status Subcriptions
          | &nbsp;  
          button.btn.btn-primary(type="button" onclick="savePreferences()") Save Preferences
          | &nbsp;  
        
    script.
      window.userId = #{user_id}
    script(src='/javascripts/preference.js')