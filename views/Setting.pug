doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    title Preference Settings
  body
    .container
      h1 Preferences
      form#preference-form
        .mb-3
          label(for="email") Email Address
          input#email.form-control(type="email", name="email", placeholder="Enter your email")
        .mb-3
          label(for="email-preference") Email Notification Preference
          select#email-preference.form-select(name="email_preference")
            option(value="off") Off
            option(value="Ok") Ok
            option(value="Help") Help
            option(value="Emergency") Emergency
        .mb-3
          label Notification Types
          .form-check
            input.form-check-input(type="checkbox", name="announcement_updates", id="announcement-updates")
            label.form-check-label(for="announcement-updates") Announcement Updates
          .form-check
            input.form-check-input(type="checkbox", name="private_post_updates", id="private-post-updates")
            label.form-check-label(for="private-post-updates") Private Post Updates
          .form-check
            input.form-check-input(type="checkbox", name="public_post_updates", id="public-post-updates")
            label.form-check-label(for="public-post-updates") Public Post Updates
          .form-check
            input.form-check-input(type="checkbox", name="status_changes", id="status-changes")
            label.form-check-label(for="status-changes") Status Changes
        button.btn.btn-primary(type="button" onclick="savePreferences()") Save Preferences
    script.
      function savePreferences() {
        const userId = #{user_id}
        const email = document.getElementById('email').value;
        const emailPreference = document.getElementById('email-preference').value;
        const announcementUpdates = document.getElementById('announcement-updates').checked;
        const privatePostUpdates = document.getElementById('private-post-updates').checked;
        const publicPostUpdates = document.getElementById('public-post-updates').checked;
        const statusChanges = document.getElementById('status-changes').checked;

        const data = {
          user_id: userId,
          email: email,
          email_preference: emailPreference,
          announcement_updates: announcementUpdates,
          private_post_updates: privatePostUpdates,
          public_post_updates: publicPostUpdates,
          status_changes: statusChanges
        };

        fetch('/preference', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        }).then(response => response.json())
          .then(result => {
            alert('Preferences saved successfully!');
          })
          .catch(error => {
            console.error('Error saving preferences:', error);
          });
      }