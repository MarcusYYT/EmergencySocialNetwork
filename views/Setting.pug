doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src='https://cdn.socket.io/4.7.4/socket.io.min.js')
    title Preference Settings
  body.bg-light
    // Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.mb-4
      .container
        a.btn.btn-outline-primary(onclick='routeToDirectory()')
          i.fas.fa-arrow-left.me-2
          | Back to Directory

    .container.py-3
      .row.justify-content-center
        .col-lg-8.mx-auto
          // Preferences Card
          .card.shadow-sm.border-0.rounded-3.mb-4
            .card-header.bg-white.border-0.py-3
              h5.mb-0.fw-bold.text-primary
                i.fas.fa-cog.me-2
                | Preferences
            
            .card-body
              form#preference-form
                .mb-3
                  label.form-label(for="email") Email Address
                  input#email.form-control(type="email", name="email", placeholder="Enter your email")
                
                .mb-4
                  h6.mb-3 Under which status would you like to receive email notification?
                  label.form-label(for="email-preference") Email Notification Status Threshold
                  select#email-preference.form-select(name="email_preference")
                    option(value="off") Off
                    option(value="Ok") Ok
                    option(value="Help") Help
                    option(value="Emergency") Emergency
                
                .mb-4
                  label.form-label.mb-3 Notification Types
                  .form-check.mb-2
                    input.form-check-input(type="checkbox", name="announcement_updates", id="announcement-updates")
                    label.form-check-label(for="announcement-updates") Announcement Updates
                  .form-check.mb-2
                    input.form-check-input(type="checkbox", name="private_post_updates", id="private-post-updates")
                    label.form-check-label(for="private-post-updates") Private Post Updates
                  .form-check.mb-2
                    input.form-check-input(type="checkbox", name="public_post_updates", id="public-post-updates")
                    label.form-check-label(for="public-post-updates") Public Post Updates
                  .form-check.mb-2
                    input.form-check-input(type="checkbox", name="status_changes", id="status-changes")
                    label.form-check-label(for="status-changes") Status Changes
                
                .d-flex.gap-2.mt-4
                  button.btn.btn-primary(type="button" onclick="routeToSubscriber()")
                    i.fas.fa-bell.me-2
                    | Manage Status Subscriptions
                  button.btn.btn-success(type="button" onclick="savePreferences()")
                    i.fas.fa-save.me-2
                    | Save Preferences
        
    script.
      window.userId = #{user_id}
    script(src='/javascripts/preference.js')