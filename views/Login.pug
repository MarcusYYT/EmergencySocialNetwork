html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    title Login
  body
    .LoginBox
      form.login-form(action='/login', method='post')
        h2 Emergency Social Network
        input(type='text', name='username', value='', placeholder='Username')
        input(type='password', name='password', value='', placeholder='Password')
        button#signinbtn.btn.btn-primary(type='submit') Login
        a(href='/users/register') New User? Register here
    script.
      if (new URL(window.location.href).searchParams.get('success') === 'true') {
        alert('Registration successful!');
      }
      if (new URL(window.location.href).searchParams.get('LoginSuc') === 'false') {
        alert('Login Failed');
      }