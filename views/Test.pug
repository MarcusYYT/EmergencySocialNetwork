doctype html
html
  head
    script.
      async function callApi() {
      await fetch('/privatePosts/1/2', {
                  method: 'GET',
                  headers: {
                  'Content-Type': 'application/json',
                  }
                }
                )
      .then(response => {
      console.log(response); // Log the raw response
      return response.json();
      })
      .then(data => console.log(data))
      .catch(error => console.error('Error:', error));
      }
      async function callPostApi() {
      await fetch('/privatePosts', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ sender_id: 1, receiver_id:2, content:"test message", status: "ok"}),
                            })
      .then(response => response.json())
      .then(data => console.log(data))
      }
  body
    button(onclick='callApi()') Call API
    button(onclick='callPostApi()') Call Post API