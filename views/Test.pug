doctype html
html
  head
    title Performance Test
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', href='/stylesheets/index.css')
    script(src='/javascripts/performanceTest.js')
  body
    .links
        a.btn.btn-primary(onclick='goBack()') Home
    .container.test-wrapper
      h1 Performance Test
      .form-group.mb-3
        label(for='testDuration') Test Duration (s)
        input#testDuration.form-control(type='number', min='1', step='1', placeholder='Enter duration in seconds')
      .form-group.mb-3
        label(for='interval') Interval (ms)
        input#interval.form-control(type='number', min='1', step='1', placeholder='Enter interval in milliseconds')
      button.btn.btn-primary.test-button(onclick="startPerformanceTest()", type='button') Start Performance Test
      button.btn.btn-secondary.test-button(onclick="endTheTest()", type='button') End Performance Test

  script.
    function goBack() {
      window.location.href = '/';
    }