doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    script(src='/javascripts/posts.js')
    title Message Wall
  body
    .links
      a.btn.btn-primary(href='/directory') Back
    #post-wrapper
      h2#message-header Message Wall
      #message-board.list-group
      form#post-form(method='POST')
        textarea#message(placeholder='Type your message here...', required='')
        button#post-btn.btn.btn-primary Post
