doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src='https://cdn.socket.io/4.7.4/socket.io.min.js')
    title Manage Subscriptions
  body
    .links
      a.btn.btn-primary(onclick='routeToSetting()') Back
    .container.standard-wrapper
      h1(style="margin-bottom: 10px; display: flex; justify-content: center; font-size: 1.6em") Manage Subscriptions
      .row.mb-3
        .col-md-8
          input#subscriber-username.form-control(type='text', placeholder='Enter username to subscribe to', style="margin-top: 10px; margin-bottom: 10px;")
        .col-md-4
          button#add-subscriber.btn.btn-primary(type='button', onclick='addSubscriber()', style="margin-top: 10px; margin-bottom: 10px;") Add Subscription
          
      table.table
        thead
          tr
            th Username
            th Action
        tbody#subscriber-list
    script.
      window.userId = #{user_id}
    script(src="/javascripts/subscriber.js")